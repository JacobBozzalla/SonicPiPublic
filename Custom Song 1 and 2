vocals = "C:/Users/jacob_bozzalla/Documents/Audacity/vocals cut.mp3"
guitar = "C:/Users/jacob_bozzalla/Documents/Audacity/Seven Nation Army - The White Stripes  Only Guitar (Isolated).mp3"
harddrums = "C:/Users/jacob_bozzalla/Documents/Audacity/Seven Nation Army - The White Stripes  Only hard drums (Isolated).mp3"


define :main_beat do
  play :e2, amp: 0.75
  wait 0.75
  play :e2, amp: 0.75
  wait 0.25
  play :g2, amp: 0.75
  wait 0.375
  play :e2, amp: 0.75
  wait 0.375
  play :d2, amp: 0.75
  wait 0.25
  play :c2, amp: 0.75
  wait 1
  play :b1, amp: 0.75
  wait 1
end

use_synth :bass_foundation
play :e2, amp: 0.2
wait 0.75
play :e2, amp: 0.25
wait 0.25
play :g2, amp: 0.3
wait 0.375
play :e2, amp: 0.45
wait 0.375
play :d2, amp: 0.55
wait 0.25
play :c2, amp: 0.65
wait 1
play :b1, amp: 0.75
wait 1

live_loop :bass do
  use_synth :bass_foundation
  11.times do
    main_beat
  end
  stop
end

wait 4
live_loop :drums do
  27.times do
    sample :drum_bass_hard, amp: 0.75
    sleep 0.5
    sample :drum_snare_hard, amp: 0.75
    sleep 0.5
  end
  stop
end

wait 6
sample vocals

wait 20
live_loop :drums2 do
  17.times do
    sample :drum_cymbal_pedal , amp: 2
    sleep 0.5
    sample :drum_bass_hard, amp: 2
    sleep 0.5
  end
  stop
end

wait 12
sample guitar, amp: 4

wait 2
live_loop :drums2 do
  17.times do
    sample :drum_cymbal_pedal, amp: 2
    sleep 0.5
    sample :drum_cymbal_pedal, amp: 2
    sleep 0.5
    sample :drum_cymbal_pedal, amp: 2
    sleep 0.5
  end
  stop
end
sample harddrums, amp: 4
#end of Song 1
wait 25
print("song 2")

define :function1 do |a,b,c,d,e|
  sample :drum_heavy_kick, amp: 5
  wait a
  sample :drum_heavy_kick, amp: 5
  wait b
  sample :drum_heavy_kick, amp: 5
  wait c
  sample :drum_heavy_kick, amp: 5
  wait d
  sample :drum_heavy_kick, amp: 5
  wait e
end

use_bpm 173
define :function1 do |x|
  sample :drum_heavy_kick, amp: 2.5
  wait x
  
end

live_loop :background_drums do
  print("song 2")
  100.times do
    sample :drum_snare_hard, amp: 1.25
    wait 1
  end
  stop
end

wait 4.5

8.times do
  function1 0.5
  function1 3
  function1 0.5
  function1 1.5
  function1 3
  
  
  
end
print("all stop for now")

sample :drum_splash_soft
wait 1
sample :drum_splash_soft
wait 2
live_loop :cymbol do
  sample :drum_splash_soft, cutoff_slide: 0.75, amp: 0.75
  wait 1
end
