# Custom Song 2

x=0
live_loop :timer do
  print(x)
  x=x+0.5
  wait 0.5
end
use_bpm 173
define :function1 do |x|
  sample :drum_heavy_kick, amp: 2.5
  wait x
  
end

live_loop :background_drums do
  print("song 2")
  100.times do
    sample :drum_snare_hard, amp: 1.25
    wait 1
  end
  stop
end

wait 4.5

8.times do
  function1 0.5
  function1 3
  function1 0.5
  function1 1.5
  function1 3
  
  
  
end
print("all stop for now")

sample :drum_splash_soft
wait 1
sample :drum_splash_soft
wait 2
live_loop :cymbol do
  sample :drum_splash_soft, cutoff_slide: 0.75, amp: 0.75
  wait 1
end
