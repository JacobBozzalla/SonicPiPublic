# Custom Song 2
use_synth :bass_foundation
t=0
live_loop :timer do
  print(t)
  t=t+0.5
  wait 0.5
end

use_bpm 173
define :function1 do |s|
  sample :drum_heavy_kick, amp: 3.5
  wait s
end

live_loop :background_drums do
  print("song 2")
  
  78.times do
    sample :drum_snare_hard, amp: 1.25
    wait 1
  end
  stop
end

wait 14.5

7.times do
  function1 0.5
  function1 3
  function1 0.5
  function1 1.5
  function1 3
end

sample :drum_splash_soft, amp: 2
wait 0.75
sample :drum_splash_soft, amp: 2
wait 1.5
live_loop :cymbol do
  62.times do
    sample :drum_cymbal_closed, amp: 2
    wait 1
  end
  stop
end

wait 1

drumsleep = [1,0.5,2,1,0.5,0.5,2 ]
i=0
live_loop :drum2 do
  4.times do
    7.times do
      sample :drum_snare_hard
      sleep (drumsleep [i])
      i=i+1
    end
    i=0
  end
  stop
end

wait 30

3.times do
  sample :drum_snare_hard
  wait 0.25
end
i=0
live_loop :drum3 do
  4.times do
    7.times do
      sample :drum_snare_hard
      sleep (drumsleep [i])
      i=i+1
    end
    i=0
  end
  stop
end
