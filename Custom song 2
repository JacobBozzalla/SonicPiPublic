# Custom Song 2

x=0
live_loop :timer do
  print(x)
  x=x+0.5
  wait 0.5
end

define :function1 do |a,b,c,d,e|
  sample :drum_heavy_kick, amp: 4
  wait a
  sample :drum_heavy_kick, amp: 4
  wait b
  sample :drum_heavy_kick, amp: 4
  wait c
  sample :drum_heavy_kick, amp: 4
  wait d
  sample :drum_heavy_kick, amp: 4
  wait e
end

live_loop :background_drums do
  use_bpm 173
  print("song 2")
  78.times do
    sample :drum_tom_mid_hard, amp: 1.25
    wait 1
  end
  stop
end

wait 4.5

7.times do
  function1 0.2, 1.25, 0.2, 0.4, 1.25
end
print("all stop for now")
sample :drum_heavy_kick, amp: 4
wait 0.2
sample :drum_heavy_kick, amp: 4
wait 0.4
sample :drum_cymbal_open
wait 0.2
sample :drum_cymbal_open
wait 0.2
sample :drum_cymbal_open

